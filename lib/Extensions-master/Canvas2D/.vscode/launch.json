{
    "version": "0.1.0",
    "configurations": [    
        {
            "name": "Launch Local Dev (Chrome)",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:1338/localDev/index.html",
            "webRoot": "${workspaceRoot}/",
            "sourceMaps": true,
            "preLaunchTask": "run",
            "userDataDir": "${workspaceRoot}/.tempChromeProfileForDebug",
            "runtimeArgs": [
                "--enable-unsafe-es3-apis" 
            ]
        }
    ]
}